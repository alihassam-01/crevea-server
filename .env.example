# Database Configuration
# Each service has its own database for better isolation and scalability
# Format: postgresql://username:password@host:port/database_name

# Auth Service Database
AUTH_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_auth_db

# Product Service Database
PRODUCT_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_product_db

# Order Service Database
ORDER_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_order_db

# Payment Service Database
PAYMENT_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_payment_db

# Shop Service Database
SHOP_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_shop_db

# Review Service Database
REVIEW_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_review_db

# Notification Service Database
NOTIFICATION_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_notification_db

# Admin Service Database
ADMIN_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_admin_db

# Promotion Service Database
PROMOTION_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_promotion_db

# Email Service Database
EMAIL_DATABASE_URL=postgresql://postgres:DB_PASSWORD@localhost:5432/crevea_email_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=crevea-server

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=7d

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/oauth/google/callback

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/oauth/facebook/callback

APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/oauth/apple/callback

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=crevea-files
R2_PUBLIC_URL=https://files.crevea.com

# PayFast Configuration
PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase
PAYFAST_SANDBOX=true

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@crevea.com

# SMS Configuration
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# Push Notification Configuration
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_PRIVATE_KEY_PATH=./certs/apns-private-key.p8

# Application Configuration
NODE_ENV=development
PORT=3000
API_GATEWAY_PORT=8080
FRONTEND_URL=http://localhost:5173

# Platform Configuration
PLATFORM_COMMISSION_RATE=0.15
CURRENCY=ZAR
TIMEZONE=Africa/Johannesburg

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
